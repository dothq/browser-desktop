{
  "manifest_version": 2,

  "applications": {
    "gecko": {
      "id": "light@themes.dothq.co"
    }
  },

  "name": "Light",
  "description": "A theme with a light color scheme.",
  "author": "Dot HQ",
  "version": "1.1",

  "icons": {"32": "icon.svg"},

  "theme": {
    "colors": {
      "tab_background_text": "rgb(24, 25, 26)",
      "icons": "rgb(24, 25, 26, 0.7)",
      "frame": "#F3F4F4",
      "popup": "#ffffff",
      "popup_text": "#0c0c0d",
      "popup_border": "#E5E5E5",
      "tab_line": "#E0E1E7",
      "toolbar": "#ffffff",
      "toolbar_top_separator": "#E5E5E5",
      "toolbar_bottom_separator": "#F4F4F4",
      "toolbar_vertical_separator": "#E5E5E5",
      "toolbar_field": "#F7F8F9",
      "toolbar_field_text": "rgb(24, 25, 26)",
      "toolbar_field_border": "#fff",
      "toolbar_field_focus": "#ffffff",
      "toolbar_field_separator": "#E5E5E5",
      "button_background_hover": "rgba(0, 0, 0, 0.04)",
      "button_background_active": "rgba(0, 0, 0, 0.1)",
      "popup_highlight": "#256EF5",
      "ntp_background": "#ffffff",
      "sidebar": "#FBFBFB"
    }
  },

  "theme_experiment": {
    "stylesheet": "experiment.css"
  }
}
