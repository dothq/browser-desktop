{
    "files.associations": {
        "*.jsm": "javascript",
        // Is there a reason you don't want syntax highlighting?
        //        "**/src/**/*.*": "plaintext",
        "**/src/**/*.svg": "svg"
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "*.tar.xz": true
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "files.exclude": {
        "**/node_modules": true,
        "**/.dotbuild": true,
        "**/dist": false
    },
    "macros.list": {
        "license": [
            {
                "command": "type",
                "args": {
                    "text": "/* This Source Code Form is subject to the terms of the Mozilla Public\n * License, v. 2.0. If a copy of the MPL was not distributed with this\n* file, You can obtain one at http://mozilla.org/MPL/2.0/. */\n\n"
                }
            },
            "insertSnippet"
        ]
    },
    "gitmoji.showEmojiCode": true,
