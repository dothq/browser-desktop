#!/bin/sh

NODE_HELPER="yarn"

build() {
    if ! command -v yarn &> /dev/null
    then
        NODE_HELPER="npm"
    fi

	$NODE_HELPER run ci-build
}

start_node() {
    if test -f ".dotbuild/index.js";
    then
        node .dotbuild $@
    else
        if ! command -v yarn &> /dev/null
        then
            NODE_HELPER="npm"
            npm i
            build
            node .dotbuild $@
        else
            yarn
            build
            node .dotbuild $@
        fi
    fi
}

run_doctor() {
    if command -v "python3" > /dev/null;
    then
        python3 scripts/doctors/$@.py
    else
        echo "Melon requires python3 for this doctor command."
    fi
}

run() {
    if command -v "node" > /dev/null;
    then
        mkdir .dotbuild >/dev/null 2>&1
        echo "$@" > .dotbuild/command
        echo "$(git rev-parse HEAD) $(git branch --show-current)" > .dotbuild/metadata

        case $1 in
            rebuild)
                echo Rebuilding...
                build
            ;;

            doctor)
                if [ -z $2 ]; then 
                    echo "You must specify the doctor name. See scripts/doctors for more information."; 
                else 
                    run_doctor $2
                fi
            ;;

            *)
                start_node $@
                exit $?
            ;;
        esac
    else
        if [ -n "$MOZILLABUILD" ]; then
            PATH="$PATH:/c/Program Files/nodejs"
            run $@
        else
            echo "This melon command requires node, which wasn't found on the system!"
            exit 1
        fi
    fi
}

run $@